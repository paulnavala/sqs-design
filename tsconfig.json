{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.vue",
    "core/**/*.ts",
    "scripts/**/*.ts",
    "vite.config.ts"
  ]
}

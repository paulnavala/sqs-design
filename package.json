{
  "name": "sqs-design-components",
  "version": "1.0.0",
  "description": "Squarespace design components with auto-generated loaders",
  "scripts": {
    "generate-loaders": "node scripts/generate-loaders.js",
    "update-loaders": "node scripts/generate-loaders.js",
    "portfolio-entry": "node scripts/generate-portfolio-entry.js",
    "portfolio-add": "node scripts/add-portfolio-project.js",
    "portfolio-build": "node scripts/build-portfolio-data.js",
    "portfolio-validate": "node scripts/build-portfolio-data.js --validate-only",
    "photos:optimize": "node scripts/optimize-photos.js",
    "build": "npm run portfolio-build && npm run generate-loaders",
    "dev": "node scripts/dev-server.js --open",
    "build:vue": "node scripts/build-vue.js",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier -w \"**/*.{js,ts,css,html,json,md}\"",
    "test": "vitest run test/unit",
    "test:watch": "vitest test/unit --watch",
    "serve": "npx http-server . -p 8080 -o test/index-auto.html"
  },
  "keywords": [
    "squarespace",
    "components",
    "css",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vitejs/plugin-vue": "^5.1.0",
    "@vitest/coverage-v8": "^2.1.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "http-server": "^14.1.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3",
    "vue-tsc": "^2.1.6"
  }
}
